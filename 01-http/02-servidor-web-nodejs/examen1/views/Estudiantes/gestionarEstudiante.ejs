    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">


        <a class="navbar-brand" href="/">Examen Web GR2</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav m-auto">
                <li class="nav-item active" style="padding-right: 60px;">
                    <a>
                        <span>
                           <%= nombre%>
                        </span>

                    </a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto" id="navbarSupportedContent">
                <li id="btn-salir" class="nav-item active">
                    <form action="/examen/borrarCookie" method="POST">
                        <button type="submit" class="btn btn-primary" style="background-color: lightblue">Salir</button>

                    </form>

                </li>
            </ul>
        </div>






    </nav>



    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form action="/examen/buscarEstudiante" method="POST">

                    <div class="mt-5 d-flex justify-content-center">
                        <div class="row">
                            <div class="col-md-9">
                                <div class="form-group">
                                    <label for="busquedaEstudiantes">BÃºsqueda</label>
                                    <input class="form-control" id="busquedaEstudiantes" name="busquedaEstudiantes" type="text">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="d-flex justify-content-center">
                                    <button type="submit" class=" mt-4 btn btn-primary">Buscar</button>
                                </div>
                                <div class="mt-3 d-flex justify-content-center">
                                    <a href="/examen/crearEstudiante">
                                        <button type="button" class="btn btn-primary">Crear</button>
                                    </a>
                                </div>
                            </div>
                        </div>


                    </div>
                </form>
            </div>



        </div>
        <div class="row mt-5">
            <div class="col-md-12">
                <table class="ml-5">
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Fecha Nacimiento</th>
                        <th>CI</th>
                        <th>graduado</th>
                        <th>Acciones</th>
                    </tr>
                    <% arregloEstudiante.forEach((Estudiantes)=>{ %>
                        <tr>
                            <td>
                                <%= Estudiantes.CI %>
                            </td>
                            <td>
                                <%= Estudiantes.nombre %>
                            </td>
                            <td>
                                <%= Estudiantes.apellido %>
                            </td>
                            <td>
                                <%= Estudiantes.fecha_nacimiento %>
                            </td>
                            <td>
                                <%= Estudiantes.graduado %>
                            </td>
                            <td>
                                <a href="/examen/Estudiante/gestionarMaterias/<%=Estudiantes.id%>">
                                    <button>Gestionar Materias</button>
                                </a>
                                <form action="/examen/eliminar" method="post">
                                    <input id="id" name="id" type="number" value="<%= Estudiantes.id %>" hidden>
                                    <button>Borrar</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </table>
            </div>
        </div>
    </div>