<!doctype html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Productos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        .titulo {
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .cabecera {
            padding-top: 20px;
        }

        .aviso {
            color: red;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="col-sm-12">
            <div class="cabecera row text-right">
                <div class="col-sm-6">
                    <span class="text-sm-right"> <%=usuario%></span>
                </div>
                <div class="col-sm-6">
                    <a href="http://localhost:3000/api/login">
                        <button type="button" class="btn btn-sm btn-primary">Salir</button>
                    </a>
                </div>
            </div>
        </div>
        <div class=" titulo col-sm-12">
            <div class="form-group text-center">
                <h2>Crear Nuevo Producto</h2>
            </div>
        </div>
        <%const existeMensaje=mensaje%>
        <%if(existeMensaje){%>
        <h4 class="aviso"><%=mensaje%></h4>
        <%}%>
    <div class="col-sm-12">
        <form action="/api/tienda/gestion/editarEnvio/<%=idPadre%>/<%=producto.productoId%>" class="form-horizontal" method="post">
            <% console.log("Producto: ",producto) %>
        <div class="form-group row">
            <label for="idProducto" class="control-label col-sm-2">idProducto:*</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="idProductoid" id="idProducto" disabled
                    value="<%=producto.productoId%>">
            </div>
        </div>
        <div class="form-group row">
            <label for="nombreId" class="control-label col-sm-2">Nombre:*</label>
            <div class="col-sm-10">                
                <input type="text" class="form-control" id="nombreId" name="nombre" value="<%=producto.nombre%>">

            </div>
        </div>
        <div class="form-group row">
            <label for="fechaId" class="control-label col-sm-2">Año de lanzamiento:</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="fechaId" name="fechaLanzamiento"
                    value="<%=producto.fechaLanzamiento%>">
            </div>
        </div>
        <div class="form-group row">
            <label for="garantiaId" class="control-label col-sm-2">Años de garantia:</label>
            <div class="col-sm-5">
                <input type="number" class="form-control" id="garantiaId" name="aniosGarantia"
                    value="<%=producto.aniosGarantia%>">
            </div>
        </div>
        <div class="form-group row">
            <label for="descripcionId" class="control-label col-sm-2">Descripcion:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="descripcionId" name="descripcion"
                    value="<%=producto.descripcion%>">
            </div>
        </div>
        <div class="form-group row">
            <label for="precioId" class="control-label col-sm-2">Pecio:*</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="precio" id="precioId" value="<%=producto.precio%>">
            </div>
        </div>

        <div class="col-sm-12">
            <div class="text-center">
                <a href="http://localhost:3000/api/tienda/gestion/<%=idPadre%>" class="btn btn-sm btn-primary"
                    role="button">Cancelar
                </a>
                <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
            </div>

        </div>
        </form>
    </div>

    </div>

</body>

</html>