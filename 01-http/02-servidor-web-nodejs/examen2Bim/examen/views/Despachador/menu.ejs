
<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Compra Peliculas</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">

    <style>
        .espacio{
            height: 100px;
        }
        .cabecera{
            padding-top:20px;
        }
    </style>
    <script src="/socket.io.js" type='text/javascript'></script>
</head>
<body>
<%- include('../Componentes/header')%>
<div class="container">
    <div class="row text-center">
        <h1>PEDIDOS</h1>
    </div>
    <div class="row text-center">
        <div class="col-sm-12">
            <table class="table table-sm table-hover table-bordered">
                <thead>
                <tr>
                    <th>No</th>
                    <th>Nombre</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th>Cedula</th>
                    <th>SubTotal</th>
                    <th>Total</th>
                    <th>Acciones</th>
                </tr>
                </thead>

                <tbody id="bodyPedidos">
                <%let i=0%>
                <% listaPedidos.forEach((pedidos)=>{ %>
                    <tr>
                        <td><%=  i+1%></td>
                        <td><%= pedidos.nombre%></td>
                        <td><%= pedidos.direccion %></td>
                        <td><%= pedidos.telefono%></td>
                        <td><%= pedidos.cedula%> </td>
                        <td><%= pedidos.totalSinImpuestos%> </td>
                        <td><%= pedidos.totalPedido%> </td>

                        <td>
                            <form action="/api/despacho/despachar-pedido" method="post">

                                <input type="number" name="pedidoId" hidden value="<%=pedidos.pedidoId%>">
                                <button type="submit" class="btn btn-xs btn-primary" onclick="despachar(<%=pedidos.pedidoId%>)">Despachar</button>
                            </form>
                        </td>


                    </tr>
                <% i++})%>
                </tbody>
            </table>

        </div>
    </div>
</div>


<script>
    const url="http://localhost:3001/websockets";
    const socket=io(url);
    console.log("Ya mismito nos concectamos :D");
    socket.on(
        'connect',
        ()=>{
            console.log("Estamos conectados");
        }
    );

    socket.on(
        'disconnect', // nombre del evento
        () => {
            console.log('=( nos desconectamos.');
        }
    );

    socket.on(
        'despachado',
        (data)=>{
            console.log(data)
            setTimeout(function () {
                location.reload();
            },1000)
        }
    );

    function despachar(pedidoId) {
        const nombreMetodo="despachar";
        const datos={
            nombre:pedidoId
        };
        socket.emit
        (
            nombreMetodo,
            datos,
            (respuesta)=>{//callback
                console.log(respuesta)
            }
        )
    }


</script>
<script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ" crossorigin="anonymous"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous"></script>
</body>
</html>